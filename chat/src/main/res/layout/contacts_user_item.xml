<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        android:id="@+id/contact_root"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:chatApp="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/contacts_user_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            chatApp:layout_constraintBottom_toBottomOf="parent"
            chatApp:layout_constraintStart_toStartOf="parent"
            chatApp:layout_constraintTop_toTopOf="parent"
            chatApp:riv_corner_radius="40dp"/>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  chatApp:layout_constraintBottom_toBottomOf="parent"
                  chatApp:layout_constraintEnd_toEndOf="parent"
                  android:layout_marginEnd="8dp"
                  chatApp:layout_constraintTop_toTopOf="parent" chatApp:layout_constraintStart_toStartOf="parent"
                  android:layout_marginStart="90dp">
        <TextView
                android:id="@+id/contacts_user_displayname"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Some Name"/>

        <TextView
                android:id="@+id/contacts_user_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="some.email@gmail.com"/>
    </LinearLayout>

    <CheckBox
            android:id="@+id/contacts_user_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            chatApp:layout_constraintBottom_toBottomOf="parent" chatApp:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginTop="8dp"
            chatApp:layout_constraintTop_toTopOf="parent"
    android:padding="8dp"/>
</android.support.constraint.ConstraintLayout>