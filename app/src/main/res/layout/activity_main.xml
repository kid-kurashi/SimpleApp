<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:chatApp="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            chatApp:layout_constraintBottom_toBottomOf="parent"
            chatApp:layout_constraintLeft_toLeftOf="parent"
            chatApp:layout_constraintRight_toRightOf="parent"
            chatApp:layout_constraintTop_toTopOf="parent"/>

    <Button
            android:id="@+id/openChat" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="8dp"
            chatApp:layout_constraintBottom_toBottomOf="parent" chatApp:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:text="Open chat"/>

</android.support.constraint.ConstraintLayout>